#include <vector>

class Solution {
public:
    int numPairsDivisibleBy60(std::vector<int>& time) {
        std::vector<int> remainders(60, 0);
        int count = 0;

        for (int t : time) {
            int r = t % 60;
            int needed_r = (60 - r) % 60;
            count += remainders[needed_r];
            remainders[r]++;
        }
        return count;
    }
};
